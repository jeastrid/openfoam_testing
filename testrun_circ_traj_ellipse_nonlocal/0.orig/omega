FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      omega;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include        "include/initialConditions"

dimensions      [0 0 -1 0 0 0 0];

internalField   uniform $turbulentOmega;

boundaryField
{
    "(inlet|outlet|topAndBottom)"
    {
        type            inletOutlet;
        inletValue      $internalField;
        value           $internalField;
    }

    cylinder
    {
        type            omegaWallFunction;
        value           $internalField;
    }

    "(front|back)"
    {   
        type            empty;
    }
}


